<h1>Upload Files Net Core</h1>

<form method="post" enctype="multipart/form-data">
    <label>Selecciona fichero</label>
    <input type="file" name="fichero" class="form-control" />
    <button class="btn btn-info">
        Subir ficheros
    </button>
</form>
<img src='@ViewData["URL"]' style="width: 150px; height: 150px;" />
<h3 style="color:blue">
    @ViewData["URL"]
</h3>
<h3 style="color:red">
    @ViewData["MENSAJE"]
</h3>